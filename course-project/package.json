{
	"name": "readit",
	"version": "1.0.0",
	"description": "Learning Electron!",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"watch": "nodemon --exec electron .",
		"reset": "git reset --hard",
		"build": "electron-builder -m",
		"release": "electron-builder -m --publish 'onTagOrDraft'",
		"win-cert": "electron-builder create-self-signed-cert -p xenostar"
	},
	"repository": "https://github.com/xenostar/electron-playground",
	"homepage": "https://github.com/xenostar/electron-playground",
	"keywords": [
		"Electron",
		"Master Electron",
		"demo"
	],
	"author": "xenostar",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron": "^16.0.2",
		"electron-builder": "^22.14.5",
		"nodemon": "^2.0.0"
	},
	"dependencies": {
		"electron-updater": "^4.6.1",
		"electron-window-state": "^5.0.3"
	},
	"build": {
		"appId": "com.xenostar.readit",
		"copyright": "Copyright xenostar",
		"publish": {
			"provider": "github"
		},
		"mac": {
			"category": "public.app-category.productivity"
		},
		"win": {
			"certificateFile": "private/xenostarelectron.p12",
			"certificatePassword": "",
			"verifyUpdateCodeSignature": false
		},
		"linux": {
			"category": "Utility"
		}
	}
}
